uniform float speed = 1.0;

void fragment()
{
	float time = fract(TIME * speed);
	vec4 col;
	
	if (time < 0.2)
	{
		col = texture(frame1, UV);
	}
	else if (time < 0.4)
	{
		col = texture(frame2, UV);
	}
	else if (time < 0.6)
	{
		col = texture(frame3, UV);
	}
	else if (time < 0.8)
